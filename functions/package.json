{
  "name": "report-pdf-functions",
  "private": true,
  "type": "module",
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc -p ./",
    "build:watch": "tsc -p ./ --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "serve:watch": "nodemon --exec \"npm run serve\" --ext ts",
    "deploy": "npm run build && firebase deploy --only functions",
    "dev": "NODE_ENV=development tsx watch src/dev/devServer.ts",
    "dev:clean": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && npm run dev",
    "dev:build": "NODE_ENV=development node -r esbuild-register src/dev/devServer.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "echo 'Tests not yet implemented'",
    "clean": "rm -rf lib"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^5.2.0",
    "dayjs": "^1.11.13",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^5.0.0",
    "handlebars": "^4.7.8",
    "puppeteer": "^22.14.0",
    "pdf-lib": "^1.17.1",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.13",
    "@types/node": "^20.8.0",
    "typescript": "^5.6.2",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "nodemon": "^3.0.1",
    "express": "^4.18.2",
    "chokidar": "^3.5.3",
    "ws": "^8.14.2",
    "tsx": "^4.7.0",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10"
  }
}
